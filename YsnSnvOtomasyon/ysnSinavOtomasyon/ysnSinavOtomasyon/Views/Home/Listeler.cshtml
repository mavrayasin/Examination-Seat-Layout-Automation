@model ysnSinavOtomasyon.Models.derslikPlanClass
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container">

    <form method="post" action="/Home/sinavListesiniGoster">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Sınav</label>

            <div class="col-sm-9">
                <select class="form-control" name="sinavSecilen">
                    <option>Seçiniz</option>
                    @foreach (var item in Model.sinavlar)
                    {
                        <option value="@item.SinavId">@item.SinavAdi (@item.SinavTarihi)</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Derslik </label>

            <div class="col-sm-9">
                <select class="form-control" name="derslikSecilen">
                    <option>Seçiniz</option>
                    @foreach (var item in Model.derslikler)
                    {
                        <option value="@item.DerslikId">@item.DerslikAdi</option>
                    }
                </select>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-success btn-block">Sınav Oturma Planını Oluştur</button>
        </div>
    </form>

</div>
